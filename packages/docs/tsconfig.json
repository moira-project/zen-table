{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist", // 빌드 결과 폴더
    "declaration": true, // 타입 정의 파일 생성
    "declarationDir": "dist", // 타입 정의 파일 위치
    "module": "ESNext",
    "target": "ES2019",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [".storybook/**/*"],
  "exclude": ["node_modules", "dist"]
}
